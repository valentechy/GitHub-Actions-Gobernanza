{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Configuración de Proyecto Enterprise",
  "required": ["project_name", "language", "version"],
  "properties": {
    "project_name": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Nombre del proyecto (sin espacios, solo guiones)"
    },
    "language": {
      "type": "string",
      "enum": ["java", "dotnet", "go", "node"],
      "description": "El stack tecnológico principal"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+(\\.[0-9]+)*$",
      "description": "Versión del runtime (ej: 17, 8.0, 20)"
    },
    "security_level": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "default": "medium"
    },
    "docker_enabled": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false
}
